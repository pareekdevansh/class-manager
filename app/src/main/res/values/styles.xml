<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_edit_text">
        <item name="android:layout_marginTop">@dimen/margin_scale4</item>
        <item name="android:padding">@dimen/margin_scale4</item>
        <item name="android:background">@drawable/custom_shape</item>
        <item name="android:elevation">@dimen/margin_scale1</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="style_text_view">
        <item name="android:layout_marginTop">@dimen/margin_scale4</item>
        <item name="android:padding">@dimen/margin_scale4</item>
<!--        <item name="android:background">@drawable/custom_shape</item>-->
<!--        <item name="android:elevation">@dimen/margin_scale1</item>-->
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_text_lecture">
        <item name="android:fontFamily">"@font/averia_sans_libre"</item>
        <item name="android:padding">@dimen/margin_scale1</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">bottom|start</item>
    </style>
</resources>