<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTodaysClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/style_text_lecture"
            android:textColor="@color/black"
            android:padding="@dimen/margin_scale3"
            android:text="Todays Classes"
            android:textSize="@dimen/font_size_large"
            android:layout_marginBottom="@dimen/margin_scale2"
            android:gravity="center_horizontal"
            />


        <TextView
            android:id="@+id/tvNoClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/style_text_lecture"
            android:padding="@dimen/margin_scale3"
            android:text="ðŸ˜Š No Classes Today ðŸ˜Š"
            android:background="@color/Platinum"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_large"
            android:layout_marginBottom="@dimen/margin_scale2"
            android:gravity="center_horizontal"
            android:visibility="gone"
            />




        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLectures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_medium"
        android:padding="@dimen/margin_scale3"
        tools:text="Devansh Pareek"
        />

    <TextView
        android:id="@+id/tvuserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_medium"
        android:padding="@dimen/margin_scale3"
        android:text="devanshpareek863@gmail.com"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnAdminSide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Side"
        android:layout_gravity="center"

        />

        <Button
            android:id="@+id/btnAnnoucements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Annoucements"

            />

        <Button
            android:id="@+id/btnSchdeule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Weekly Schedule"
            android:layout_gravity="center"

            />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:lottie_fileName="loading_colored.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />

    </LinearLayout>

</ScrollView>